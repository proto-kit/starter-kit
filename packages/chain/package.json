{
  "name": "chain",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "watch": {
    "build-and-start": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "*"
      ],
      "quiet": true
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads ./node_modules/jest/bin/jest.js",
    "test:watch": "npm run test --watchAll",
    "build": "tsc -p tsconfig.json",
    "start": "FORCE_COLOR=3 node --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads --es-module-specifier-resolution=node ./dist/start.js",
    "dev:run": "FORCE_COLOR=3 TS_NODE_TRANSPILE_ONLY=true node --loader ts-node/esm --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads --es-module-specifier-resolution=node ./src/start.ts start \"./environments/$PROTOKIT_ENV/chain.config.ts\" $1",
    "dev": "nodemon --watch 'src/**' --ext 'ts' --exec \"pnpm dev:run\"",
    "migrate": "prisma migrate deploy --schema ./node_modules/@proto-kit/persistance/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema ./node_modules/@proto-kit/persistance/prisma/schema.prisma"
  },
  "peerDependencies": {
    "@proto-kit/api": "../../../framework/packages/api",
    "@proto-kit/cli": "../../../framework/packages/cli",
    "@proto-kit/common": "../../../framework/packages/common",
    "@proto-kit/deployment": "../../../framework/packages/deployment",
    "@proto-kit/library": "../../../framework/packages/library",
    "@proto-kit/module": "../../../framework/packages/module",
    "@proto-kit/persistance": "../../../framework/packages/persistance",
    "@proto-kit/protocol": "../../../framework/packages/protocol",
    "@proto-kit/sdk": "../../../framework/packages/sdk",
    "@proto-kit/sequencer": "../../../framework/packages/sequencer",
    "o1js": "../../../framework/node_modules/o1js",
    "tsyringe": "../../../framework/node_modules/tsyringe"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@prisma/client": "^5.7.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/react-dom": "^18.2.7",
    "@types/yargs": "^17.0.32",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint-config-custom": "workspace:*",
    "events": "^3.3.0",
    "jest": "^29.6.1",
    "jest-expect-message": "^1.1.3",
    "loglevel": "^1.8.1",
    "nodemon": "^3.1.4",
    "npm-watch": "^0.11.0",
    "path-browserify": "^1.0.1",
    "prisma": "^5.7.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig": "workspace:*",
    "typescript": "4.9.4",
    "url": "^0.11.1",
    "util": "^0.12.5",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  }
}
